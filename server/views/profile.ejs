<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.name.givenName %>'s Profile</title>
</head>
<body>
    <h1>Welcome, <%= user.name.givenName + ' ' + user.name.familyName%></h1>
    <div id="recipeDiv">
        <button onclick="getRecipes()">Click to view your recipes</button>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        function getRecipes() {
            $("#recipeDiv").html('<h2>Your saved recipes: </h2>    <ul id="recipes">    </ul>');
            var recipeIDs = [];
            <% for(var i = 0; i < user.recipeIDs.length; i++) { %>
                recipeIDs.push(<%= user.recipeIDs[i] %>);
            <% } %>
            recipeIDs.forEach(recipe => {
                getRecipe(recipe);
            });
        }
        function getRecipe(recipeID) {
            a = $.ajax({
                url: window.location.origin + '/api/getRecipe/' + recipeID,
                method: 'GET'
            }).done(function(data) {
                $('#recipes').append('<li>'+'<img src="'+ data.image +'" alt="" height="100px">'+data.title+'</li>');
            });
        }
    </script>
</body>
</html>